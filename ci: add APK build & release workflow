name: Build web + RN companion APK and publish Release (debug)

on:
  workflow_dispatch:
  push:
    branches:
      - main

jobs:
  build-and-release-apk:
    runs-on: ubuntu-latest
    env:
      NODE_OPTIONS: --max_old_space_size=4096

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Install root deps and build web UI
        run: |
          npm ci
          npm run build
        env:
          CI: true

      - name: Copy web build into RN companion assets
        run: |
          mkdir -p rn-companion/android/app/src/main/assets/www
          rm -rf rn-companion/android/app/src/main/assets/www/*
          cp -R dist/. rn-companion/android/app/src/main/assets/www/

      - name: Install RN companion node deps
        working-directory: rn-companion
        run: |
          npm ci

      - name: Set up JDK 11
        uses: actions/setup-java@v4
        with:
          distribution: 'temurin'
          java-version: '11'

      - name: Setup Android SDK (tools)
        uses: reactivecircus/android-emulator-runner@v2
        with:
          api-level: 31
          arch: x86_64
          target: default
          emulator-options: -no-window

      - name: Build debug APK (assembleDebug)
        working-directory: rn-companion/android
        run: |
          chmod +x ./gradlew
          ./gradlew assembleDebug --no-daemon
        env:
          JAVA_HOME: /usr/lib/jvm/java-11-openjdk-amd64

      - name: Prepare release tag
        id: tag
        run: |
          echo "RELEASE_TAG=apk-$(date -u +%Y%m%d-%H%M%S)" >> $GITHUB_ENV

      - name: Create GitHub Release
        id: create_release
        uses: actions/create-release@v1
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        with:
          tag_name: ${{ env.RELEASE_TAG }}
          release_name: "Debug APK - ${{ env.RELEASE_TAG }}"
          draft: false
          prerelease: false

      - name: Upload APK to Release
        uses: actions/upload-release-asset@v1
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        with:
          upload_url: ${{ steps.create_release.outputs.upload_url }}
          asset_path: rn-companion/android/app/build/outputs/apk/debug/app-debug.apk
          asset_name: s-a-ai-assistant-app-debug.apk
          asset_content_type: application/vnd.android.package-archive
